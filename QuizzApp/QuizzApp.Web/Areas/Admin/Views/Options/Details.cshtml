@model QuizzApp.Data.Entities.Option

@{
    ViewData["Title"] = "Details";
}

<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card text-black">
          <p style="text-align:center">Detail</p>
          
          <div class="card-body">
            
            <div>
              <div class="d-flex justify-content-between">
                <span>Option Name</span><span>@Model.OptionName</span>
              </div>
              <div class="d-flex justify-content-between">
                                <span>Question Name</span><span>@if (Model.Question!=null) { @Model.Question.QuestionName}</span>
                            </div>
              <div class="d-flex justify-content-between">
                <span>Status</span><span>@Model.Status</span>
              </div>
            </div>
           
          </div>
        </div>
      </div>
      <div class="mb-3" style="text-align:center;margin-top:10px">
            <a asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-primary" style="width:150px">Edit</a>
            <a asp-action="Index" type="button" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
  </div>
</section>


