@model IEnumerable<QuizzApp.VModels.Results.ResultVModel>

@{
    ViewData["Title"] = "Index";
   
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Result</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active"></li>
        </ol>
        <p>
            <a type="button" class="btn btn-success" asp-action="Create">Create New Result For Question</a>
        </p>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                List Result
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                Question Name
                            </th><th>
                               Answer Text
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                           <th>
                                Question ID
                            </th><th>
                               Answer Text
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                               <td> @if(item.Question != null){
                                    @item.Question.QuestionName
                                }</td>
                                <td>@item.AnswerText</td>
                                <td>
                                    <a type="button" class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a type="button" class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
