@model IEnumerable<QuizzApp.Data.Entities.Question>

@{
    ViewData["Title"] = "ListQuestions";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var id = TempData["id"];
}
    @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];
    }
    else if(TempData["error"] != null){
        ViewBag.Message = TempData["error"];
    }
    @Html.Partial("_message")

    <h1 style="text-align:center">List Questions</h1>
<br />


<div style="margin-left:3%">
      <a asp-action="CreateNew" asp-controller="Options" asp-area="Admin" asp-route-id="@id" class="btn btn-outline-primary" type="button">Create</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMultiple)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            
        <tr>
            <td><i id="id2" hidden="hidden">@item.Id</i></td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMultiple)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                <a asp-controller="Questions" asp-area="UserArea" asp-action="EditQuestions" asp-route-id="@item.Id">Edit</a> |
                <a id="@item.Id" onclick="deleteConfirm1(this)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>