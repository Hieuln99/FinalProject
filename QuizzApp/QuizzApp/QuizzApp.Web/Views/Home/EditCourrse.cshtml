@model QuizzApp.Data.Entities.Course

@{
    ViewData["Title"] = "CreateCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
<h1>Create Course</h1>
<hr />
