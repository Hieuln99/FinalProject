@model QuizzApp.Data.Entities.Option

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid px-4">
        <h1 class="mt-4">Delete Option</h1>

<h3>Are you sure you want to delete this?</h3>

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card text-black">
                    <p style="text-align:center">Detail</p>

                    <div class="card-body">

                        <div>
                            <div class="d-flex justify-content-between">
                                <span>Option Name</span><span>@Model.OptionName</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Question Name</span><span>@Model.Question.QuestionName</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Status</span><span>@Model.Status</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="mb-3" style="text-align:center;margin-top:10px">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    <a asp-action="Index" type="button" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </form>

            </div>
        </div>
    </div>