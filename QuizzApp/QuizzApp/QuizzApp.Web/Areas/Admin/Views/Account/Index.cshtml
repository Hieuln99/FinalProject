@using QuizzApp.Data.Entities
@model IEnumerable<User>

<main>
    
  @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];
    }
    else if(TempData["error"] != null){
        ViewBag.Message = TempData["error"];
    }
    @Html.Partial("_message")

    <div class="container-fluid px-4">
        <h1 class="mt-4">Account</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active"></li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                List Users
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                User Name
                            </th><th>
                                Email
                            </th>
                            <th>Phone number
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                User Name
                            </th><th>
                                Email
                            </th><th>
                                Phone number
                            </th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>
                                    <a type="button" class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">Details</a>
                                    <a type="button" class="btn btn-outline-danger" asp-action="Delete" onclick="return confirm('Are you sure you want to delete this?')" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
