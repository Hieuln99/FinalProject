@using QuizzApp.Data.Entities
@model IEnumerable<Course>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Course List of @ViewBag.CategoryName</h2>
        </div>
        <br />
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Course
            </a>
        </div>
    </div>
    <br />

    <table id="tblData" class="table table-bPostsed table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Created Time</th>
                <th>Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td>@item.CreatedTime.ToString("dd - MMM - yyyy")</td>
                    <td>
                        <a type="button" class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a type="button" class="btn btn-outline-info" asp-action="ListCourseOfCategory" asp-route-id="@item.Id">Details</a>
                        <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>